#!/usr/bin/env bash

# This script installs and configures Nginx on an Ubuntu server with a custom HTTP header

# Update package lists and install nginx
sudo apt-get update -y
sudo apt-get install -y nginx

# Ensure Nginx is started
sudo service nginx start

# Configure Nginx default site to serve expected content
echo 'Holberton School for the win!' | sudo tee /var/www/html/index.html > /dev/null

# Ensure proper permissions and ownership
sudo chmod 644 /var/www/html/index.html
sudo chown www-data:www-data /var/www/html/index.html

# Add custom HTTP header in Nginx config
echo 'server {
    listen 80 default_server;
    listen [::]:80 default_server;
    root /var/www/html;
    index index.html index.htm;
    server_name _;
    location / {
        add_header X-Served-By "$(hostname)";
        try_files $uri $uri/ =404;
    }
}' | sudo tee /etc/nginx/sites-available/default > /dev/null

# Restart Nginx without using systemctl
sudo service nginx restart

