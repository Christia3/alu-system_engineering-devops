#!/usr/bin/env bash
#
# This script configures Nginx to add a custom HTTP response header
# X-Served-By with the hostname of the server.

# Update package index
sudo apt update

# Install Nginx if it's not already installed
sudo apt install -y nginx

# Set the hostname variable
HOSTNAME=$(hostname)

# Configure Nginx to include the custom header
sudo bash -c "cat > /etc/nginx/conf.d/custom_header.conf << EOF
server {
    listen 80;

    location / {
        add_header X-Served-By $HOSTNAME;
        # other configurations for your server
    }
}
EOF"

# Test Nginx configuration for syntax errors
sudo nginx -t

# Restart Nginx to apply changes
sudo systemctl restart nginx

